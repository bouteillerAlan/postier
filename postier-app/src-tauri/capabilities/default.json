{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/*"
        },
        {
          "path": "$APPCONFIG/*"
        }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPLOCALDATA/*"
        },
        {
          "path": "$APPCONFIG/*"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    }
  ]
}